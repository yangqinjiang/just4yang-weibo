<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#0f0ff0" >
	<!-- 第一行 -->
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <ImageView 
            android:id="@+id/popUserIcon"
            android:layout_width="48dp"
       	 	android:layout_height="48dp"
        	android:src="@drawable/usericon"
        	android:contentDescription="@string/app_name"
        />
        <Button             
            android:id="@+id/btnFollowerMe"
            android:layout_width="wrap_content"
       	 	android:layout_height="wrap_content"
       	 	android:layout_gravity="center"
       	 	android:background="#80ff00ff"
       	 	android:text="+加关注"/>
        </LinearLayout>
	        <!-- 1 2  -->
	        <LinearLayout
	            android:layout_width="fill_parent"
	        	android:layout_height="wrap_content"
	        	android:orientation="vertical"
	        	android:gravity="center"
	        	 >
	        	 	<!-- 1 2 1 -->
			        	<LinearLayout
			            android:layout_width="fill_parent"
			        	android:layout_height="wrap_content"
			        	android:orientation="horizontal"
			        	 >
			        	 <!-- 昵称 -->
			           <TextView 
			               android:id="@+id/popScreenName"
			               android:layout_width="wrap_content"
			               android:layout_height="wrap_content"
			               android:text="@string/app_name"
			               />
			           <!-- 新浪认证-->
			           <ImageView 
			               android:id="@+id/popIsV"
			               android:layout_width="wrap_content"
			               android:layout_height="wrap_content"
			               android:src="@drawable/v"
			               android:contentDescription="@string/app_name"
			               /> 
			           <!-- 性别-->
			           <ImageView 
			               android:id="@+id/popGender"
			               android:layout_width="wrap_content"
			               android:layout_height="wrap_content"
			               android:src="@drawable/f"
			               android:contentDescription="@string/app_name"
			               /> 
			               <!-- 城市 -->
			            <TextView
			                android:id="@+id/popLocation" 
			                android:layout_width="fill_parent"
			                android:layout_height="wrap_content"
			                android:text="@string/city"
			                />
			        </LinearLayout>
			
			       	 <!-- 1 2 2 -->
			        <LinearLayout
			            android:layout_width="fill_parent"
			        	android:layout_height="wrap_content"
			        	android:orientation="horizontal"
			        	 >
			            <!-- 关注数 -->
			            <TextView
			                android:id="@+id/popFriendsCount" 
			                android:layout_width="fill_parent"
			                android:layout_height="wrap_content"
			                android:layout_weight="1"
			                android:text="关注数:xx"
			                />
			            <!-- 粉丝数 -->
			            <TextView
			                android:id="@+id/popFollowersCount" 
			                android:layout_width="fill_parent"
			                android:layout_height="wrap_content"
			                android:layout_weight="1"
			                android:text="粉丝数:xx"
			                />
			             <!-- 微博数 -->
			            <TextView
			                android:id="@+id/popStatusesCount" 
			                android:layout_width="fill_parent"
			                android:layout_height="wrap_content"
			                android:layout_weight="1"
			                android:text="微博数:xx"
			                />
			            </LinearLayout>
			    <!--个人描述  -->
			    <TextView
			        android:id="@+id/popDescription" 
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:text="简介：个人描述"
			        />
			    <!-- 最新微博 -->
			    <TextView
			        android:id="@+id/popNewsStatus" 
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:text="最新微博..."
			        />
   		 </LinearLayout>
     </LinearLayout>
    <!-- 第二行 --> 
	<LinearLayout
	     android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
	        <!--个人描述  -->
<!-- 	    <TextView
	        android:id="@+id/popDescription" 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="简介：个人描述"
	        /> -->
	</LinearLayout>
	<!-- 第三行 -->
	<LinearLayout
	     android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        >
	        <!--已关注按钮  -->
	        <Button 
	            android:id="@+id/popHasConcerned"
	           android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:text="已关注"
	        android:layout_weight="1.0"/>
	        <!--取消关注按钮  -->
	        <Button 
	            android:id="@+id/popCancel"
	           android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:text="取消"
	        android:layout_weight="1.0"/>
	</LinearLayout>

</LinearLayout>